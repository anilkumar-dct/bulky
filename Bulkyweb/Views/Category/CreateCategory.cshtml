@{
    ViewData["Title"] = "Create Category";
}
@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white p-2">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            @* <form method="post" asp-action="CreateCategoryForm" asp-controller="Category"> *@
            <div class="border p-3 mt-4">
                <div class="row pb-3">

                    <hr />
                </div>
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="mb-3">
                    <lable>Category Name</lable>
                    <input asp-for="Name" type="text" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <lable>Display Order</lable>
                    <input asp-for="DisplayOrder" type="number" class="form-control rounded-3" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row ">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-primary rounded-3 w-100">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Category" asp-controller="Category" class="btn btn-outline-secondary rounded-3  w-100 text-decoration-none">Back</a>
                    </div>

                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}