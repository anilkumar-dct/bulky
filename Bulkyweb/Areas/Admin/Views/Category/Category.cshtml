@{
    ViewData["Title"] = "Category";
}
@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white p-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        
            <div class="row  pb-3">
                <div class="col-12 text-end">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="CreateCategory">
                        <i class="bi bi-plus-circle"></i> Create New Category
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Display Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr>
                                <td>@data.Name</td>
                                <td>@data.DisplayOrder</td>
                                <td>
                                    <div class="w-75 btn-group d-flex justify-content-center">
                                        <a class="btn btn-primary rounded-2 btn-sm m-1" asp-controller="Category" asp-action="Edit" asp-route-id="@data.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a class="btn btn-danger rounded-2 btn-sm m-1" asp-controller="Category" asp-action="Delete" asp-route-id="@data.Id">
                                            <i class="bi bi-trash3"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
   
</div>


